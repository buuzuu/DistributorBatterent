<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:orientation="vertical"
    app:cardElevation="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/card"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:layout_height="230dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="171dp"
                android:id="@+id/bat_img"
                android:scaleType="fitCenter"
                android:layout_height="wrap_content"
                android:src="@drawable/bat1" />


            <TextView
                android:id="@+id/modelNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="center"
                android:textSize="24sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/bat_img"
                android:text="Model" />
            <TextView
                android:id="@+id/productNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/bat_img"
                android:layout_below="@+id/modelNumber"
                android:text="Product Number" />
            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/bat_img"
                android:layout_below="@+id/productNumber"
                android:text="Product Number" />
            <TextView
                android:id="@+id/productAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/bat_img"
                android:layout_below="@+id/userName"
                android:text="Product Number" />
            <TextView
                android:id="@+id/userAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/bat_img"
                android:layout_below="@+id/productAmount"
                android:text="Product Number" />

            <Button
                android:id="@+id/track"
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_below="@+id/userAddress"
                android:layout_marginLeft="132dp"
                android:layout_marginTop="11dp"
                android:textSize="10sp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/bat_img"
                android:background="@drawable/shapesignup2"
                android:text="Lock" />


        </RelativeLayout>




    </android.support.v7.widget.CardView>
</android.support.v7.widget.CardView>