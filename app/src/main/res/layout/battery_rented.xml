<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/panel_import"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:weightSum="10"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="12dp"
            app:cardCornerRadius="5dp"
            android:layout_weight="3"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="250dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rcImage"/>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardElevation="10dp"
            android:layout_weight="5"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/scheme_name"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:text="Battery Request"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/scheme_name"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:textSize="20sp"

                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:text="ModelName"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:layout_height="wrap_content"
                    android:id="@+id/scheme_description"
                    android:layout_marginTop="12dp"
                    android:padding="15dp"
                    android:layout_below="@id/scheme_name"
                    android:lineSpacingMultiplier="1.5"
                    android:text="Customer Name"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_toRightOf="@id/scheme_description"
                    android:layout_below="@id/scheme_name"
                    android:layout_marginTop="12dp"
                    android:padding="15dp"
                    android:textSize="20sp"
                    android:id="@+id/customerName"
                    android:text="Hritik"
                    android:layout_alignParentRight="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/distriId"
                    android:layout_marginTop="12dp"
                    android:padding="15dp"
                    android:textSize="20sp"
                    android:layout_below="@id/scheme_description"
                    android:lineSpacingMultiplier="1.5"
                    android:text="User ID"
                    android:textColor="@android:color/black"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:padding="15dp"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/month1"
                    android:layout_below="@id/distriId"
                    android:text="Month"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/userId"
                    android:lineSpacingMultiplier="1.5"
                    android:layout_toRightOf="@id/scheme_description"
                    android:layout_below="@id/customerName"
                    android:layout_marginTop="12dp"
                    android:padding="15dp"
                    android:textSize="20sp"
                    android:text="buuzuu1234"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:padding="15dp"
                    android:textSize="20sp"

                    android:textColor="@android:color/black"
                    android:id="@+id/amount"
                    android:layout_below="@id/month"
                    android:text="Amount Paid"/>

                <TextView
                    android:id="@+id/paidAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/month"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="0dp"
                    android:layout_toRightOf="@id/amount"
                    android:padding="15dp"
                    android:text="600"
                    android:textSize="20sp"
                    android:textAlignment="textEnd" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:id="@+id/month"
                    android:textSize="20sp"
                    android:layout_toRightOf="@id/month1"
                    android:layout_below="@id/userId"
                    android:layout_marginTop="12dp"
                    android:padding="15dp"
                    android:text="2"
                    android:layout_alignParentRight="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_below="@+id/amount"
                    android:layout_centerHorizontal="true"
                    android:textStyle="bold"
                    android:text="Address"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/shipAddress"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:hint="Put Your Address"
                    android:layout_centerHorizontal="true"
                    android:text="C.K 65-8 KabirChaura, Varanasi"
                    android:layout_below="@id/address"/>





            </RelativeLayout>




        </android.support.v7.widget.CardView>


        <ng.max.slideview.SlideView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/acceptReq"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            app:sv_reverseSlide="false"
            app:sv_buttonBackgroundColor="#ffffff"
            app:sv_buttonImage="@drawable/ic_keyboard_arrow_right_black_24dp"
            app:sv_slideBackgroundColor="@color/colorPrimaryDark"
            app:sv_slideText="Accept"
            app:sv_slideTextColor="#ffffff"/>

    </LinearLayout>

    <com.victor.ringbutton.RingButton
        android:id="@+id/ringButton"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:ringbutton_downText="My Battery"
        app:ringbutton_upText="Rented Battery" />

</android.support.constraint.ConstraintLayout>