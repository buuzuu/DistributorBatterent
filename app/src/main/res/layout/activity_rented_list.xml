<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RentedList">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:id="@+id/card"
        app:cardCornerRadius="15dp"
        app:cardElevation="15dp"
        android:layout_height="230dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="171dp"
            android:id="@+id/bat_img"
            android:scaleType="fitCenter"
            android:layout_height="wrap_content"
            android:src="@drawable/bat1" />


        <TextView
            android:id="@+id/modelNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bat_img"
            android:text="Model" />
        <TextView
            android:id="@+id/productNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bat_img"
            android:layout_below="@+id/modelNumber"
            android:text="Product Number" />
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bat_img"
            android:layout_below="@+id/productNumber"
            android:text="Product Number" />
        <TextView
            android:id="@+id/productAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bat_img"
            android:layout_below="@+id/userName"
            android:text="Product Number" />
        <TextView
            android:id="@+id/userAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/bat_img"
            android:layout_below="@+id/productAmount"
            android:text="Product Number" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/track"
            android:text="Track"
            android:background="@drawable/shapesignup"
            android:layout_toRightOf="@id/bat_img"
            android:layout_below="@+id/userAddress"/>












    </RelativeLayout>




    </android.support.v7.widget.CardView>
    <fragment
        android:layout_width="match_parent"
        android:layout_below="@+id/card"
        android:layout_marginTop="1dp"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="match_parent"/>






</RelativeLayout>